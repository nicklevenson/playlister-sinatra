<h1>New Song</h1>

<form action="/songs" method="POST">
  <label>Song Name: </label><input type="text" id="Name" name="song[name]"><br>

  <label>Song Genres: </label><br>
  <% @genres.each do |genre| %>
    <input type="checkbox" id="<%=genre.name%>" name="genre[genre_id][]" value="<%=genre.id%>"><label><%=genre.name%></label><br>
  <%end%>

  <label>Artist Name: </label><input type="text" id="Artist Name" name="artist[name]"><br>
  <input type="submit" value="Create">
</form>